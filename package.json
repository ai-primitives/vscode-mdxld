{
  "name": "vscode-mdxld",
  "displayName": "MDX-LD",
  "version": "0.1.0",
  "description": "VS Code extension for MDX-LD with namespace browsing, schema validation, and AI-enriched editing",
  "publisher": "ai-primitives",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:mdx",
    "onView:mdxldNamespaces",
    "onCommand:mdxld.showSearch",
    "onCommand:mdxld.refreshNamespaces"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "mdx",
        "extensions": [
          ".mdx"
        ]
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mdxld-explorer",
          "title": "MDX-LD Explorer",
          "icon": "$(symbol-namespace)"
        }
      ]
    },
    "views": {
      "mdxld-explorer": [
        {
          "id": "mdxldNamespaces",
          "name": "Namespaces & Collections",
          "contextualTitle": "MDX-LD Namespaces"
        }
      ]
    },
    "commands": [
      {
        "command": "mdxld.showSearch",
        "title": "Search Namespaces",
        "category": "MDX-LD",
        "icon": "$(search)"
      },
      {
        "command": "mdxld.refreshNamespaces",
        "title": "Refresh Namespaces",
        "category": "MDX-LD",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "mdxld.showSearch",
          "when": "view == mdxldNamespaces",
          "group": "navigation"
        },
        {
          "command": "mdxld.refreshNamespaces",
          "when": "view == mdxldNamespaces",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run build",
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"*.{md,mdx}\""
  },
  "dependencies": {
    "@mdxdb/clickhouse": "workspace:*",
    "@mdxdb/fetch": "workspace:*",
    "@mdxdb/fs": "workspace:*",
    "@mdxdb/types": "workspace:*",
    "@types/yaml": "^1.9.7",
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "json5": "^2.2.3",
    "mdxai": "latest",
    "mdxld": "latest",
    "monaco-editor": "^0.52.2",
    "yaml": "^2.6.1"
  },
  "devDependencies": {
    "@types/json5": "^2.2.0",
    "@types/node": "^22.10.2",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ai-primitives/vscode-mdxld.git"
  },
  "author": "AI Primitives",
  "license": "MIT",
  "homepage": "https://mdx.org.ai"
}
