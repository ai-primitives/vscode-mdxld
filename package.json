{
  "name": "vscode-mdxld",
  "displayName": "MDX-LD",
  "version": "0.1.0",
  "description": "VS Code extension for MDX-LD with namespace browsing, schema validation, and AI-enriched editing",
  "publisher": "ai-primitives",
  "engines": {
    "vscode": "^1.74.0"
  },
  "browser": "./dist/web/extension.js",
  "capabilities": {
    "virtualWorkspaces": true,
    "untrustedWorkspaces": { "supported": true }
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:mdx",
    "onView:mdxldNamespaces",
    "onCommand:mdxld.showSearch",
    "onCommand:mdxld.refreshNamespaces"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "MDX-LD",
      "properties": {
        "mdxld.provider": {
          "type": "string",
          "enum": ["fetch", "fs", "clickhouse"],
          "description": "Provider type to use",
          "default": "fetch"
        },
        "mdxld.fetch.endpoint": {
          "type": "string",
          "description": "Endpoint URL for fetch provider"
        },
        "mdxld.fetch.token": {
          "type": "string",
          "description": "Authentication token for fetch provider"
        },
        "mdxld.fs.path": {
          "type": "string",
          "default": ".",
          "description": "Local path for fs provider"
        },
        "mdxld.openaiApiKey": {
          "type": "string",
          "description": "OpenAI API key for providers"
        },
        "mdxld.clickhouse.url": {
          "type": "string",
          "description": "ClickHouse server URL"
        },
        "mdxld.clickhouse.username": {
          "type": "string",
          "description": "ClickHouse username"
        },
        "mdxld.clickhouse.password": {
          "type": "string",
          "description": "ClickHouse password"
        },
        "mdxld.clickhouse.database": {
          "type": "string",
          "description": "ClickHouse database name"
        },
        "mdxld.clickhouse.oplogTable": {
          "type": "string",
          "description": "ClickHouse oplog table name",
          "default": "mdxld_oplog"
        },
        "mdxld.clickhouse.dataTable": {
          "type": "string",
          "description": "ClickHouse data table name",
          "default": "mdxld_data"
        }
      }
    },
    "languages": [
      {
        "id": "mdx",
        "extensions": [
          ".mdx"
        ]
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mdxld-explorer",
          "title": "MDX-LD Explorer",
          "icon": "$(symbol-namespace)"
        }
      ]
    },
    "views": {
      "mdxld-explorer": [
        {
          "id": "mdxldNamespaces",
          "name": "Namespaces & Collections",
          "contextualTitle": "MDX-LD Namespaces"
        }
      ]
    },
    "commands": [
      {
        "command": "mdxld.showSearch",
        "title": "Search Namespaces",
        "category": "MDX-LD",
        "icon": "$(search)"
      },
      {
        "command": "mdxld.refreshNamespaces",
        "title": "Refresh Namespaces",
        "category": "MDX-LD",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "mdxld.showSearch",
          "when": "view == mdxldNamespaces",
          "group": "navigation"
        },
        {
          "command": "mdxld.refreshNamespaces",
          "when": "view == mdxldNamespaces",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run build",
    "build": "pnpm run build:node && pnpm run build:web",
    "build:node": "tsc -p ./",
    "build:web": "webpack --config webpack.web.config.js",
    "watch": "tsc -watch -p ./",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"*.{md,mdx}\""
  },
  "dependencies": {
    "@types/node-fetch": "^2.6.12",
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "json5": "^2.2.3",
    "mdxai": "latest",
    "mdxld": "latest",
    "monaco-editor": "^0.52.2",
    "node-fetch": "^3.3.2",
    "yaml": "^2.6.1"
  },
  "devDependencies": {
    "@types/json5": "^2.2.0",
    "@types/node": "^22.10.2",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "ts-loader": "^9.5.1",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "webpack": "^5.90.1",
    "webpack-cli": "^5.1.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ai-primitives/vscode-mdxld.git"
  },
  "author": "AI Primitives",
  "license": "MIT",
  "homepage": "https://mdx.org.ai"
}
