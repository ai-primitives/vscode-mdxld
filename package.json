{
  "name": "vscode-mdxld",
  "displayName": "MDX-LD",
  "version": "0.1.0",
  "description": "VS Code extension for MDX-LD with namespace browsing, schema validation, and AI-enriched editing",
  "publisher": "ai-primitives",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:mdx",
    "onView:mdxld-namespaces"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [{
      "id": "mdx",
      "extensions": [".mdx"]
    }],
    "commands": [
      {
        "command": "mdxld.refreshNamespaces",
        "title": "Refresh Namespaces",
        "category": "MDX-LD"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run build",
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"*.{md,mdx}\""
  },
  "dependencies": {
    "mdxld": "^0.1.0",
    "mdxai": "^0.1.2",
    "json5": "^2.2.3"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ai-primitives/vscode-mdxld.git"
  },
  "author": "AI Primitives",
  "license": "MIT",
  "homepage": "https://mdx.org.ai"
}
